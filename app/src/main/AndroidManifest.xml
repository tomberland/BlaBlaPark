                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".fr.utt.thomas.blablapark.map.Map"
            android:label="@string/title_activity_map" >
