        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyAq4TVGjsGBlQgkjLdNtX3zZXCgi8jIS7Y" />

        <activity
            android:name=".fr.utt.thomas.blablapark.activity.MainActivity"
            android:label="@string/title_activity_connexion" >
        </activity>
        <activity
            android:name=".fr.utt.thomas.blablapark.activity.InscriptionActivity"
            android:label="@string/title_activity_inscription" >
        </activity>
        <activity
            android:name=".fr.utt.thomas.blablapark.ParkingDisplay.PlaceMapActivity"
            android:label="@string/title_activity_place_map" >
        </activity>
    </application>

</manifest>
